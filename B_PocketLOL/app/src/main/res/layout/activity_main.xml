<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.naruto.b_pocketlol.main.MainActivity">
    <FrameLayout
        android:id="@+id/main_replace"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#BABABA"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#F0F0F0">

        <RadioButton
            android:id="@+id/rbt_news_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/selector_news_bg"
            android:gravity="center"
            android:text="咨询"
            android:textSize="10sp"
            android:textColor="@color/color"

            android:layout_marginTop="5dp"/>

        <RadioButton
            android:id="@+id/rbt_friend_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_friend_bg"
            android:gravity="center"
            android:text="好友"
            android:textSize="10sp"
            android:textColor="@color/color"

            android:layout_marginTop="5dp"/>

        <RadioButton
            android:id="@+id/rbt_discovery_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_discovery_bg"
            android:gravity="center"
            android:text="发现"
            android:textSize="10sp"
            android:textColor="@color/color"

            android:layout_marginTop="5dp"/>

        <RadioButton
            android:id="@+id/rbt_me_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_me_bg"
            android:gravity="center"
            android:text="我"
            android:textSize="10sp"
            android:textColor="@color/color"

            android:layout_marginTop="5dp"/>


    </RadioGroup>
</LinearLayout>
